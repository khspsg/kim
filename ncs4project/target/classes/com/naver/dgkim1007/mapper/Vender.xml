<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.naver.dgkim1007.service.VenderDao">
	<resultMap type="com.naver.dgkim1007.entities.Vender" id="VenderMap">
	</resultMap>
	
	<select id="codeConfirm" parameterType="String" resultType="int">
		select count(*) from Vender where code=#{code}
	</select>
	<insert id="insertRow" parameterType="hashMap">
		insert into Vender(code,name,busno1,busno2,busno3,ceoname,
		bustype,busconditions,
		zipcode,newaddr,oldaddr,detailaddr,officeno1,officeno2,officeno3
		)values(
		#{code,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR},#{busno1,jdbcType=VARCHAR},#{busno2,jdbcType=VARCHAR},
		#{busno3,jdbcType=VARCHAR},#{ceoname,jdbcType=VARCHAR},
		#{bustype,jdbcType=VARCHAR},#{busconditions,jdbcType=VARCHAR},
		#{zipcode,jdbcType=VARCHAR},#{newaddr,jdbcType=VARCHAR},
		#{oldaddr,jdbcType=VARCHAR},#{detailaddr,jdbcType=VARCHAR},#{officeno1,jdbcType=VARCHAR},#{officeno2,jdbcType=VARCHAR},#{officeno3,jdbcType=VARCHAR}
		)
	</insert>
	<select id="selectAll"  resultMap="VenderMap">
		select * from Vender
	</select>
	
	<select id="selectOne" parameterType="String" resultMap="VenderMap">
		select * from Vender where code=#{code}
	</select>
	<update id="updateRow" parameterType="hashMap">
		update Vender set name=#{name},busno1=#{busno1},busno2=#{busno2},
		busno3=#{busno3},ceoname=#{ceoname},zipcode=#{zipcode},
		bustype=#{bustype},busconditions=#{busconditions},
		newaddr=#{newaddr},oldaddr=#{oldaddr},detailaddr=#{detailaddr},
		officeno1=#{officeno1},officeno2=#{officeno2},officeno3=#{officeno3}
		where code=#{code}
		 
	</update>
	<delete id="deleteRow"  parameterType="String">
		delete from Vender where code=#{code}
	</delete>
	 
</mapper>